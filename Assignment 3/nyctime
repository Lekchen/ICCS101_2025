# Time Spent: 0:15 hrs
def nycHour(bkkHour: int) -> str:
    time = 0
    if bkkHour < 12:
        time += bkkHour + 1
        time = str(time)
        nyctime = time + "am"
    elif bkkHour >= 12:
        time += bkkHour - 11
        time = str(time)
        nyctime = time + "pm"
    return nyctime
